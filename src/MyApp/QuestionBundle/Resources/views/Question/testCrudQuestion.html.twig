{% extends "@MyAppUser/Default/pages/admin.html.twig" %}

{% block containter %}
<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.js"></script>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/js/bootstrap.min.js"></script>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twbs-pagination/1.3.1/jquery.twbsPagination.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>

<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

<link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">




<h1 hidden>TEST</h1>
<button id="btn" hidden>affichage</button>
<div class="container">


<br>
    <br>
    <div>

        <label class="control-label" for="title">Rechercher :</label>

        <input id="recherche" type="text" name="rechercher" class="form-control" />


    </div>
    <div class="row">

        <div class="col-lg-12 margin-tb">

            <div class="pull-left">

                <label class="control-label" for="title">Question</label>

            </div>

            <div class="pull-right">

                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#create-item">

                    Ajouter Question

                </button>
                <a href="{{ path('genererSon') }}"><button id="generer"type="button" class="btn btn-success">

                    Générer Son

                </button></a>

            </div>

        </div>

    </div>


    <table class="table table-bordered">

        <thead>

        <tr>

            <th >Contenu</th>
            <th >Type Question</th>
            <th>Reponse Correct </th>
            <th colspan="3">reponser erronée</th>
            <th>Image</th>
        </tr>

        </thead>

        <tbody id="info">

        </tbody>

    </table>


    <ul id="pagination" class="pagination-sm"></ul>







    <!-- Create Item Modal -->

<div class="modal fade" id="create-item" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>

                <h4 class="modal-title" id="myModalLabel">Ajouter Question</h4>

            </div>


            <div class="modal-body">
                {{ form_start(f) }}




                    <div class="form-group">

                        <label class="control-label" for="title">Contenu:</label><br>

                        {{ form_widget(f.contenu) }}<br>

                        <div class="help-block with-errors"></div>

                    </div>


                    <div class="form-group">

                        <label class="control-label" for="title">Type Question:</label><br>

                        {{ form_widget(f.typequest) }}<br>

                        <div class="help-block with-errors"></div>

                    </div>

                   <div class="form-group">

                        <label class="control-label" for="title">Reponse Correct:</label><br>

                       {{ form_widget(f.reponsecorrect) }}<br>

                    <div class="help-block with-errors"></div>

                 </div>

                <div class="form-group">

                    <label class="control-label" for="title">Choix 1:</label><br>

                    {{ form_widget(f.choix1) }}<br>

                    <div class="help-block with-errors"></div>

                </div>

                <div class="form-group">

                    <label class="control-label" for="title">Choix 2:</label><br>

                    {{ form_widget(f.choix2) }}<br>

                    <div class="help-block with-errors"></div>

                </div>


                <div class="form-group">

                    <label class="control-label" for="title">Choix 3:</label><br>

                    {{ form_widget(f.choix3) }}<br>

                    <div class="help-block with-errors"></div>

                </div>

                <div class="form-group">

                    <label class="control-label" for="title">Insérer Image:</label><br>

                    {{ form_widget(f.imageFile) }}

                    <div class="help-block with-errors"></div>

                </div>



                {{ form_end(f) }}


            </div>

        </div>


    </div>

</div>

<!-- Edit Item Modal -->

<div class="modal fade" id="edit-item" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>

                <h4 class="modal-title" id="myModalLabel">Modifier Question</h4>

            </div>


            <div class="modal-body">

                {{ form_start(j) }}
                    <input type="hidden" name="id" class="edit-id">


                    <div class="form-group">

                        <label class="control-label" for="title">Contenu:</label>

                        <textarea name="contenu" class="form-control" data-error="Please enter description." required></textarea>


                        <div class="help-block with-errors"></div>

                    </div>


                    <div class="form-group">

                        <label class="control-label" for="title">TypeQuestion:</label>

                        {{ form_widget(j.typequest) }}

                        <div class="help-block with-errors"></div>

                    </div>

                    <div class="form-group">

                        <label class="control-label" for="title">Reponse Correcte:</label>

                        <input type="text" name="ReponseCorrect" class="form-control" data-error="Please enter title." required />

                        <div class="help-block with-errors"></div>

                    </div>


                    <div class="form-group">

                        <label class="control-label" for="title">Choix1:</label>

                        <input name="Choix1" class="form-control" data-error="Please enter description." required></input>

                        <div class="help-block with-errors"></div>

                    </div>

                    <div class="form-group">

                        <label class="control-label" for="title">Choix2:</label>

                        <input type="text" name="Choix2" class="form-control" data-error="Please enter title." required />

                        <div class="help-block with-errors"></div>

                    </div>


                    <div class="form-group">

                        <label class="control-label" for="title">Choix3:</label>

                        <input name="Choix3" class="form-control" data-error="Please enter description." required></input>

                        <div class="help-block with-errors"></div>

                    </div>


                <div class="form-group">

                    <label class="control-label" for="title">Image</label>

                    {{ form_widget(j.imageFile) }}

                    <div class="help-block with-errors"></div>

                </div>



                {{ form_end(j) }}


            </div>

        </div>

    </div>

</div>


</div>
<script src="{{ asset('assets/js/json.js') }}" ></script>

{% endblock %}

